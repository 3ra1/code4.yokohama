        {% block stylesheets %}
            {% do
                assets.addCss('theme://css/common.css', 100) %}
            {% do
                assets.addCss('theme://css/normalize.css', 100) %}
        {% endblock %}
        {{ assets.css() }}

        {% block javascripts %}
            {% do
                assets.add('jquery', 101) %}
            {% do
                assets.add('theme://js/script.js', 101) %}
        {% endblock %}
        {{ assets.js() }}
