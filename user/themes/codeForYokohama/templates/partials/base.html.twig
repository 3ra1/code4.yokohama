        <meta name="viewport"
              content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <link href='http://fonts.googleapis.com/css?family=Lato:300,400' rel='stylesheet' type='text/css'>
        <link type="image/png" rel="icon" href="/c4y_favicon.png"/>
        <meta property="og:title" content="code for YOKOHAMA"/>
        <meta property="og:type" content="article"/>
        <meta property="og:description" content="Code for YOKOHAMAは仲間とともに技術を磨き、学んだスキルを地域の課題解決に役立てていきます"/>
        <meta property="og:url" content="http://code4.yokohama/"/>
        <meta property="og:image" content="http://code4.yokohama/images/icon_top.png"/>
        <meta property="fb:app_id" content="485812038210485"/>
        <link rel="canonical" href="{{ page.url(true, true) }}"/>
