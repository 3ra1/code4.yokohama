<body id="top" class="{{ page.header.body_classes }}">

{% block header %}
    <div id="mainVisual" class="main_visual">
        <img class="main_visual_typo_pc" src="{{ url ('theme://images/main_typo_pc.png') }}"
             alt="TECHNOLOGY FOR SOCIAL INNOVATION"/>
        <img class="main_visual_typo_sp" src="{{ url ('theme://images/main_typo_sp.png') }}"
             alt="TECHNOLOGY FOR SOCIAL INNOVATION"/>
        {% if grav.uri.params != null %}
            {% set pageParams = grav.uri.params %}
            {% set isCategory = preg_match("{^\/category:}", pageParams) %}
            {% set isTaxonomy = preg_match("{^\/tag:}", pageParams) %}
            {% set isPaged = preg_match("{^\/page:}", pageParams) %}
            {% if isCategory == 1 %}
                {% set index = strlen("/category:") %}
                {% set pageCategory = (substr(pageParams, index)) %}
                {% set pageTitle = rawurldecode(pageCategory) %}
            {% elseif isTaxonomy == 1 %}
                {% set index = strlen("/") %}
                {% set pageCategory = (substr(pageParams, index)) %}
                {% set pageTitle = ucfirst(rawurldecode(pageCategory)) %}
            {% elseif isPaged == 1 %}
                {% if page.parent.header.title == null %}
                    {% set pageTitle = page.title %}
                {% else %}
                    {% set pageTitle = page.parent.header.title %}
                {% endif %}
            {% endif %}
        {% else %}
            {% if page.parent.header.title == null %}
                {% set pageTitle = page.title %}
            {% else %}
                {% set pageTitle = page.parent.header.title %}
            {% endif %}
        {% endif %}
        <h1 id="main_category" class="main_title">{{ pageTitle }}</h1>
        <header>
            {% set menuItemHomeUrl = null %}
            {% set menuItemHomeTitle = null %}
            {% set menuItemActivitiesUrl = null %}
            {% set menuItemActivitiesTitle = null %}
            {% set menuItemMembersUrl = null %}
            {% set menuItemMembersTitle = null %}
            {% set menuItemAboutUrl = null %}
            {% set menuItemAboutTitle = null %}

            {% for page in pages.children.visible %}
                {% if page.menu == 'Home' %}
                    {% set menuItemHomeTitle = page.menu %}
                    {% set menuItemHomeUrl = page.url %}
                {% endif %}
                {% if page.menu == 'Activities' %}
                    {% set menuItemActivitiesTitle = page.menu %}
                    {% set menuItemActivitiesUrl = page.url %}
                {% endif %}
                {% if page.menu == 'Members' %}
                    {% set menuItemMembersTitle = page.menu %}
                    {% set menuItemMembersUrl = page.url %}
                {% endif %}
                {% if page.menu == 'About' %}
                    {% set menuItemAboutTitle = page.menu %}
                    {% set menuItemAboutUrl = page.url %}
                {% endif %}
            {% endfor %}

            <div class="header_box">
                <div class="header_box_pc">
                    <div class="header_image_pc">
                        <a class="header_icon_link" href="{{ menuItemHomeUrl }}">

                            <h1 class="header_heading"><img class="header_icon"
                                                            src="{{ url('theme://images/header_logo_pc.png') }}"
                                                            alt="code for yokohama"/></h1>
                        </a>
                    </div>
                    <div class="header nav">
                        <nav id="grobalNav" class="grobal_nav">
                            <ul class="nav_box_pc">
                                <li class="nav_item">
                                    <a href="{{ menuItemActivitiesUrl }}">
                                        {% if menuItemActivitiesTitle != null %}
                                            {{ menuItemActivitiesTitle }}
                                        {% else %}
                                            Activities
                                        {% endif %}
                                    </a>
                                </li>
                                <li class="nav_item">
                                    <a href="{{ '' ~ menuItemActivitiesUrl ~ '/category:Meeting' }}">Meeting</a>
                                </li>
                                <li class="nav_item">
                                    <a href="{{ menuItemMembersUrl }}">
                                        {% if menuItemMembersTitle != null %}
                                            {{ menuItemMembersTitle }}
                                        {% else %}
                                            Members
                                        {% endif %}
                                    </a>
                                </li>
                                <li class="nav_item">
                                    <a href="https://docs.google.com/a/info-lounge.jp/forms/d/1jpl0R1mK1JXRzOPdQpVBU6pN3Ei2Ol4Qz9R44tHEdQI/viewform"
                                       target="_blank">Get Involved</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>

                <div class="header_box_sp">
                    <a class="header_icon_link" href="/">
                        <h1 class="header_heading"><img class="header_icon"
                                                        src="{{ url('theme://images/header_logo_sp.png') }}"
                                                        alt="code for yokohama"/></h1>
                    </a>

                    <div class="menu_icon">
                        <span class="top"></span>
                        <span class="middle"></span>
                        <span class="bottom"></span>
                    </div>

                    <div class="menu_item_box">
                        <div class="header nav">
                            <nav id="grobalNav" class="grobal_nav">
                                <ul class="nav_box_sp">
                                    <li class="nav_item">
                                        <a href="{{ menuItemActivitiesUrl }}">
                                            {% if menuItemActivitiesTitle != null %}
                                                {{ menuItemActivitiesTitle }}
                                            {% else %}
                                                Activities
                                            {% endif %}
                                        </a>
                                    </li>
                                    <li class="nav_item">
                                        <a href="{{ '' ~ menuItemActivitiesUrl ~ '/category:Meeting' }}">Meeting</a>
                                    </li>
                                    <li class="nav_item">
                                        <a href="{{ menuItemMembersUrl }}">
                                            {% if menuItemMembersTitle != null %}
                                                {{ menuItemMembersTitle }}
                                            {% else %}
                                                Members
                                            {% endif %}
                                        </a>
                                    </li>
                                    <li class="nav_item">
                                        <a href="https://docs.google.com/a/info-lounge.jp/forms/d/1jpl0R1mK1JXRzOPdQpVBU6pN3Ei2Ol4Qz9R44tHEdQI/viewform"
                                           target="_blank">Get Involved</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>

            </div>
        </header>
    </div>
{% endblock %}

{% block body %}
    <div id="body" class="{{ class }}">
        {% block content %}{% endblock %}
        {% block categoryPosts %}{% endblock %}
    </div>
{% endblock %}

{% block footer %}
    <footer>
        <div class="footer_box">
            <div class="container footer_box_flex">
                <div class="license_box">
                    <div class="license_image">
                        <a class="creative_commons_image" rel="license"
                           href="http://creativecommons.org/licenses/by/4.0/">
                            <img src="https://i.creativecommons.org/l/by/4.0/88x31.png" alt="クリエイティブ・コモンズ・ライセンス"/>
                        </a>
                    </div>
                    <div class="license_message">
