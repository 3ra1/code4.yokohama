{% set collection = page.collection('Activities') %}
{% set activitiesOption = { items:  {'@taxonomy.category': 'Activities'}, 'limit': 2, 'order': {'by': 'date', 'dir': 'desc'} } %}
{% set activitiesCollection = page.collection(activitiesOption) %}

{% block stylesheets %}
  {% do
    assets.addCss('theme://css/index.css', 100) %}
{% endblock %}
<div>
  <ul class="whats_new_list">
    {% for child in activitiesCollection %}
    {{dump (child.title)}}
    <li class="whats_new_item">
      <time class="dt-published" datetime="{{ child.date|date(" c") }}"="c" )=")" }}""="}}" "">
        <span class="whats_new_item_date">{{ child.date|date("Y") }}.{{ child.date|date("m") }}.{{ child.date|date("d") }}</span>
      </time>
      <div class="whats_new_item_title_box">
        <p class="whats_new_item_title">{{child.title}}</p>
      </div>
    </li>
    {% endfor %}
  </ul>
</div>
